{

  "rules": {
    "complexity": [2, { "max": 10 }],
    "no-debugger": 2,
    "eqeqeq": [2, "always"],
    "no-eval": 2,
    "max-statements-per-line": [2, { "max": 1 }],
    "curly": 2,
    "no-array-constructor": 2,
    "no-new-object": 2,
    "no-bitwise": 2,
    "no-new-wrappers": 2,
    "guard-for-in": 2,
    "no-inner-declarations":2,
    "comma-dangle": [2, "never"],
    "no-cond-assign": 2,
    "no-extra-label": 2,
    "no-unreachable": 2,
    "default-case": 2,
    "no-fallthrough": 2,
    "no-empty": 2,
    "max-params": [2, 3],
    "no-octal": 2,
    "strict": [2, "global"],
    "max-lines": [2, {"max": 100, "skipBlankLines": true, "skipComments": true}],
    "indent": [2, 2],
    "no-tabs": 2,
    "no-implied-eval": 2,
    "no-loop-func": 2,
    "vars-on-top": 2,
    "no-warning-comments": [2, { "terms": ["todo", "fixme"], "location": "anywhere" }],
    "no-extra-boolean-cast": 1,
    "no-trailing-spaces": 2,
    "line-comment-position": [2, { "position": "above" }],
    "no-unused-vars": [2, { "vars": "all", "args": "all" }],
    "no-alert": 2,
    "semi": [2, "always"],
    "no-extra-semi": 2,
    "no-sequences": 2,
    "no-labels": 2,
    "max-depth": [2, { "max": 3 }],
    "no-inline-comments": 1,
    "no-use-before-define": [2, { "functions": false, "classes": false }],
    "no-redeclare": 2,
    "one-var": [2, "always"],
    "no-with": 2,
    "no-multi-str": 2,
    "no-dupe-args": 2,
    "no-dupe-keys": 2
  }
}
